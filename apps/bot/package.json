{
    "name": "@crates/bot",
    "module": "src/main.ts",
    "type": "module",
    "scripts": {
        "predev": "bun --filter=@crates/shared run dev",
        "prestart": "bun --filter=@crates/shared run build",
        "format": "bunx biome format src --write .",
        "lint": "bunx biome lint --error-on-warnings src",
        "lint:ts": "tsc --noEmit"
    },
    "devDependencies": {
        "@types/bun": "latest"
    },
    "peerDependencies": {
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "@crates/shared": "workspace:*",
        "grammy": "^1.37.0"
    }
}
